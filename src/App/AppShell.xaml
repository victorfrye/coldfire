<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VictorFrye.Coldfire.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VictorFrye.Coldfire.App"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'fluent_info_filled_black.png'}" />

        <ShellContent
            Title="Books"
            ContentTemplate="{DataTemplate local:BooksPage}"
            Icon="{OnPlatform 'fluent_book_filled_black.png'}" />

        <ShellContent
            Title="Characters"
            ContentTemplate="{DataTemplate local:CharactersPage}"
            Icon="{OnPlatform 'fluent_person_filled_black.png'}" />

        <ShellContent
            Title="Houses"
            ContentTemplate="{DataTemplate local:HousesPage}"
            Icon="{OnPlatform 'fluent_home_filled_black.png'}" />
    </TabBar>

</Shell>
